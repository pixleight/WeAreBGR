<div class="fixed">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1><%= link_to "WeAreBGR", root_url %></h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <% if signed_in? %>
          <li class="active has-dropdown"><%= link_to current_creator.name, creator_path(current_creator) %>
            <ul class="dropdown">
              <li><%= link_to "Edit Profile", edit_creator_path(current_creator) %></li>
              <li><%= link_to "Sign Out", signout_path, method: "delete" %></li>
            </ul>
          </li>
        <% else %>
          <li class="has-form"><%= link_to "Sign In", signin_path, class: "button" %></li>
          <li class="has-form"><%= link_to "Sign Up", signup_path, class: "button" %></li>
        <% end %>
        <li class="show-for-small-only"><a href="http://github.com/pixleight"><i class="fa fa-github fa-2x"></i> Fork Me on Github</a></li>
      </ul>
    </section>
  </nav>
</div>
