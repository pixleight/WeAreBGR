<% if @creator.errors.any? %>
  <div id="error_explanation">
    <div class="alert-box alert">
      <p>The form contains <%= pluralize(@creator.errors.count, "error") %>.</p>
      <ul>
        <% @creator.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
